<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        style="@style/Smile.TextView._Black" 
        android:text="红色钱包"
        android:singleLine="true"
        >
    </TextView>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_marginTop="10dp"
        android:text="周三早上丢失了红色钱包，在食堂二楼"
        style="@style/Smile.TextView._Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title" 
        android:minLines="1"
        android:maxLines="2"
        android:textSize="16sp"
        >
    </TextView>

    <com.bzu.yhd.pocketcampus.widget.NoScrollGridView
        android:id="@+id/content_images"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_describe"
        android:layout_marginLeft="10dp"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:visibility="gone"
        android:verticalSpacing="1dp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="10dp"
        android:text="20130240122"
        style="@style/Smile.TextView._Gray"
        android:textSize="12sp"
        android:layout_below="@id/content_images" >
    </TextView>

    <TextView
        android:id="@+id/tv_photo"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:textSize="12sp"
        android:paddingBottom="3dp"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        style="@style/Smile.TextView._White"
        android:layout_below="@id/content_images"
        android:background="@color/green"
        android:text="138024249542"
        android:drawableLeft="@drawable/icon_photo" >
    </TextView>

</RelativeLayout>